<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.accountsetup.AccountSetupActivity">

    <TextView
        android:id="@+id/tvSetupTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Setup Complete!"
        android:textSize="24sp"
        style="@style/SecureChat.Text.Title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:src="@mipmap/ic_launcher_round"
        android:contentDescription="User Avatar"
        app:layout_constraintTop_toBottomOf="@+id/tvSetupTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnChangeAvatar"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Avatar"
        app:layout_constraintTop_toBottomOf="@+id/ivAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvAssignedHandleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your anonymous handle:"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/btnChangeAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvAssignedHandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="AnonymousUser123"
        android:textSize="18sp"
        style="@style/SecureChat.Text.Body"
        app:layout_constraintTop_toBottomOf="@+id/tvAssignedHandleLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnChangeHandle"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Handle"
        app:layout_constraintTop_toBottomOf="@+id/tvAssignedHandle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnContinueToApp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Continue to App"
        style="@style/SecureChat.Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
