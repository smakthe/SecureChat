<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SecureChat" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/gray_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/gray_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorOnSurface">@color/on_surface</item>

        <!-- Custom attributes -->
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray_dark</item>
    </style>

    <style name="Theme.SecureChat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SecureChat.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SecureChat.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Button Styles -->
    <style name="SecureChat.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="SecureChat.Button.Panic" parent="SecureChat.Button">
        <item name="backgroundTint">@color/red_panic</item>
    </style>

    <!-- Text Styles -->
    <style name="SecureChat.Text.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SecureChat.Text.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>